<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
<!--_________________________________________________________-->
<!--Fields related to payment-->
<!--_________________________________________________________-->
    <field formid="cardNumber" label="label.input.exercise5.cardNumber" type="string" mandatory="true" binding="cardNumber"
           max-length="20" missing-error="error.message.required" parse-error="error.message.required" />

    <field formid="expirationMonth" label="label.input.exercise5.expirationmonth" type="integer" mandatory="true" binding="expirationMonth" missing-error="error.message.required"
           value-error="payment.card.month.invalid">
        <options>
            <option optionid="" label="select.default.month" value=""/>
            <option optionid="01" label="01" value="01"/>
            <option optionid="02" label="02" value="02"/>
            <option optionid="03" label="03" value="03"/>
            <option optionid="04" label="04" value="04"/>
            <option optionid="05" label="05" value="05"/>
            <option optionid="06" label="06" value="06"/>
            <option optionid="07" label="07" value="07"/>
            <option optionid="08" label="08" value="08"/>
            <option optionid="09" label="09" value="09"/>
            <option optionid="10" label="10" value="10"/>
            <option optionid="11" label="11" value="11"/>
            <option optionid="12" label="12" value="12"/>
        </options>
    </field>

    <field formid="expirationYear" label="label.input.exercise5.expirationyear" type="integer" mandatory="true" binding="expirationYear"
           missing-error="error.message.required" value-error="payment.card.year.invalid">
        <options>
            <option optionid="" label="select.default.year" value=""/>
            <option optionid="2021" label="2021" value="2021"/>
            <option optionid="2022" label="2022" value="2022"/>
            <option optionid="2023" label="2023" value="2023"/>
            <option optionid="2024" label="2024" value="2024"/>
            <option optionid="2025" label="2025" value="2025"/>
            <option optionid="2026" label="2026" value="2026"/>
            <option optionid="2027" label="2027" value="2027"/>
            <option optionid="2028" label="2028" value="2028"/>
            <option optionid="2029" label="2029" value="2029"/>
            <option optionid="2030" label="2030" value="2030"/>
            <option optionid="2031" label="2031" value="2031"/>
            <option optionid="2032" label="2032" value="2032"/>
        </options>
    </field>

    <field formid="securityCode" label="label.input.exercise5.securitycode" type="string" mandatory="true" binding="securityCode"
           max-length="4" missing-error="error.message.required" />

    <field formid="email" label="label.input.exercise5.email" type="string" mandatory="true" binding="email" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
           max-length="100" missing-error="error.message.required" parse-error="error.email.invalidValue"/>

    <field formid="saveCard" label="label.input.exercise5.saveCard" binding="saveCard" type="boolean" mandatory="false" checked="true" />

<!--_________________________________________________________-->
<!--Fields related to address information-->
<!--_________________________________________________________-->

    <field formid="address1" label="label.input.address1" type="string" mandatory="true" binding="address1" max-length="50"
           missing-error="address.address1.missing" range-error="error.message.50orless"/>

    <field formid="address2" label="label.input.address2" type="string" mandatory="false" binding="address2"
           max-length="50" range-error="error.message.50orless"/>

    <field formid="city" label="label.input.city" type="string" mandatory="true" binding="city" min-length="2"
           max-length="50" missing-error="address.city.missing" range-error="error.message.between2and50"/>

    <!--  postal code -->
    <field formid="postalCode" label="label.input.zipcode" type="string" mandatory="true" min-length="5" max-length="10"
           regexp="(^\d{5}(-\d{4})?$)|(^[abceghjklmnprstvxyABCEGHJKLMNPRSTVXY]{1}\d{1}[A-Za-z]{1} *\d{1}[A-Za-z]{1}\d{1}$)"
           binding="postalCode"
           range-error="error.message.between5and10"
           missing-error="address.zipcode.missing"
           parse-error="error.message.parse.zip"/>

    <!-- use set of supported countries -->
    <field formid="country" label="label.input.country" type="string" mandatory="true" binding="countryCode"
           missing-error="address.country.missing">
        <options>
            <option optionid="US" label="select.option.country.unitedstates" value="US"/>
            <option optionid="ES" label="select.option.country.spain" value="ES"/>
            <option optionid="FR" label="select.option.country.france" value="FR"/>
            <option optionid="IT" label="select.option.country.italy" value="IT"/>
            <option optionid="UK" label="select.option.country.unitedkingdom" value="UK"/>
            <option optionid="JP" label="select.option.country.japan" value="JP"/>
        </options>
    </field>

    <!-- use global state list -->
	<field formid="stateCode" label="label.input.state" type="string" mandatory="true" binding="stateCode" missing-error="address.state.missing" value-error="address.field.invalid" parse-error="error.message.required"/>

    <!-- phone is mandatory for addresses -->
    <field formid="phone" label="label.input.phonenumber" description="address.phone.example" type="string" mandatory="true"
           binding="phone" min-length="10" max-length="20"
           missing-error="address.phone.missing"
           range-error="error.message.between10and20"
           parse-error="error.message.parse.phone"/>

    <!--Comment textArea-->
    <field formid="comment" label="label.input.exercise5.comment" type="string" mandatory="false" binding="comment" max-length="150"/>
</form>
